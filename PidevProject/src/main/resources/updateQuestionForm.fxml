<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UpdateQuestionFormController">
   <TextField fx:id="titleField" layoutX="136.0" layoutY="50.0" promptText="Titre :" styleClass="text-field_update" stylesheets="@style.css" />
   <TextField fx:id="attachmentField" editable="false" layoutX="136.0" layoutY="190.0" prefHeight="31.0" prefWidth="99.0" promptText="Fichier :" styleClass="text-field_update" stylesheets="@style.css" />
   <Button fx:id="file_chooser_button" layoutX="235.0" layoutY="190.0" onAction="#handleChooseFileButton" prefHeight="31.0" prefWidth="99.0" styleClass="file-chooser-button" stylesheets="@style.css" text="Choisir un Ficher" />
   <Button fx:id="saveButton" layoutX="117.0" layoutY="234.0" mnemonicParsing="false" onAction="#updateQuestion" styleClass="button_save" stylesheets="@style.css" text="Modifier" />
   <Button fx:id="cancelButton" layoutX="246.0" layoutY="234.0" mnemonicParsing="false" onAction="#closeTab" stylesheets="@style.css" text="Annuler" />
   <TextArea fx:id="contentArea" layoutX="117.0" layoutY="91.0" prefHeight="84.0" prefWidth="214.0" promptText="Contenu :" styleClass="text-field_update" stylesheets="@style.css" />
</AnchorPane>
