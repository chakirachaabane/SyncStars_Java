<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="700.0" maxWidth="880.0" prefHeight="700.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.addExercice"
            style="-fx-background-color: #DFF2E7;"> <!-- Définir la couleur d'arrière-plan -->

    <children>
        <Button layoutX="424.0" layoutY="327.0" mnemonicParsing="false" onAction="#addExercice" text="Ajouter"
                style="-fx-background-color: #69BFA7; -fx-text-fill: #18593B;" /> <!-- Définir les styles du bouton -->

        <!-- Champ Nom de l'exercice -->
        <TextField fx:id="nomExerciceTF" layoutX="185.0" layoutY="139.0" />
        <Label layoutX="77.0" layoutY="143.0" text="Nom de l'exercice" />

        <!-- Champ Type -->
        <TextField fx:id="typeTF" layoutX="185.0" layoutY="187.0" />
        <Label layoutX="85.0" layoutY="200.0" text="Type" />

        <!-- Champ Durée -->
        <TextField fx:id="dureeTF" layoutX="185.0" layoutY="237.0" />
        <Label layoutX="77.0" layoutY="250.0" text="Durée" />

        <!-- Champ Nombre de fois -->
        <TextField fx:id="nombresfoisTF" layoutX="185.0" layoutY="287.0" />
        <Label layoutX="77.0" layoutY="300.0" text="Nombre de fois" />
    </children>
</AnchorPane>
